<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.himawari.server</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/himawari-server</string>
        <string>--port</string>
        <string>9740</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>WorkingDirectory</key>
    <string>/var/lib/himawari</string>

    <key>StandardOutPath</key>
    <string>/var/log/himawari-server.log</string>

    <key>StandardErrorPath</key>
    <string>/var/log/himawari-server-error.log</string>
</dict>
</plist>
